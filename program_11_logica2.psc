// a cm y mm
Algoritmo program_11_logica2

	Definir metro,cm,mm Como Real;
	
	Escribir "Ingrese la longitud del metro:";
	Leer metro;
	
	cm <- metro*100;
	mm <- metro*1000
	
	Escribir "La longitud de:",metro," a cm es:",cm," y a mm es:",mm;
	
FinAlgoritmo
